{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES3",
    "sourceMap": true,
    "types": ["node"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "resolveJsonModule": true
  }
}
